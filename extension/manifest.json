{
  "manifest_version": 2,

  "name": "serum-proxy",
  "description": "serum-proxy",
  "version": "0.0.1",

  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "proxy",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "browser_action": {
    "default_title": "Serum Proxy",
    "default_popup": "menu.html"
  },

  "background": {
    "scripts": ["hot-reload.js", "settings.js"]
  }
}
